define("overlay", ["osd", "scalebar", "jquery", "fabricjs", "zoomer"], function(osd, scalebar, $, fabricjs, viewer) {

	//console.log("hello");
	//data = "hello";

		//console.log(fabric);	 

		function init() {
		
		//this.viewer = zoomer.viewer;
	
            	
		// initialize overlay
		
                    
		var overlay2 = viewer.fabricjsOverlay();
		var canvas = overlay2.fabricCanvas();
		//console.dir(canvas);

        // add fabric rectangle
		canvas.selection = false;
		canvas.selectionBorderColor = 'blue';
		canvas.selectionLineWidth = 100;					
		canvas.selectionColor = "rgba(63, 123, 191)";
		//console.log(fabric);	                    
				

                    var rect1 = new fabric.Rect({
                      left: 0,
                      top: 0,
					  opacity: 0.8,
                      width: 1000,
                      height: 1000,
					  fill: '#FFA500'					  	
                    }); 

					var rect2 = new fabric.Rect({
                      left: 1001,
                      top: 0,
					  opacity: 0.8,                      
                      width: 1000,
                      height: 1000,
					  fill: '#00ff99'					   		
                    }); 

                    var rect3 = new fabric.Rect({
                      left: 2001,
                      top: 0,
					  opacity: 0.8,  
                      width: 1000,
                      height: 1000,
					  fill: '#FFA500'
                    }); 

                    var rect4 = new fabric.Rect({
                      left: 0,
                      top: 1001,
					  opacity: 0.8,  
                      width: 1000,
                      height: 1000,
					  fill: '#00ff99'
                    });

                    var rect5 = new fabric.Rect({
                      left: 1001,
                      top: 1001,
					  opacity: 0.8,  
                      width: 1000,
                      height: 1000,
					  fill: '#FFA500'
                    });

                    var rect6 = new fabric.Rect({
                      left: 2001,
                      top: 1001,
					  opacity: 0.8,  
                      width: 1000,
                      height: 1000,
					  fill: '#00ff99' 
                    });
                    
					var group = new fabric.Group([rect1, rect2, rect3, rect4, rect5, rect6 ], {
 						 left: 0,
						  top: 10,					 
					});

					//console.log(group);
                    canvas.add(group);           
                   
                    
           
                    
                    $(window).resize(function() {
                        overlay2.resize();
                        overlay2.resizecanvas();
                    });
                }

		

       init();

      

});
